<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.chikku.alarm.AlarmSetActivity"
    android:id="@+id/Main">

    <RelativeLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:id="@+id/new_button_layout">

        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/new_alarm_button"
            android:id="@+id/button2"
            android:layout_centerHorizontal="true"
            android:onClick="createNewAlarm" />
    </RelativeLayout>


    <ListView xmlns:android="http://schemas.android.com/apk/res/android"
        android:id="@+id/alarm_list_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/new_button_layout" />


</RelativeLayout>